{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "account.schema.json",
    "version": "1.0.0",
    "title": "Account",
    "description": "Account in the balance sheet",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9]{4}$"
        },
        "label": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": ["id", "label"]
}