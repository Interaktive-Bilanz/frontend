{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "./journal_entry.schema.json",
    "title": "Journal Entry",
    "description": "A journal entry with at least one debit-line and one credit-line",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "entryLines": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/entryLine"
            },
            "default": [],
            "allOf": [
                {
                    "contains": {
                        "type": "object",
                        "properties": {
                            "entryType": {
                                "const": "debit"
                            }
                        },
                        "required": [
                            "entryType"
                        ]
                    },
                    "minContains": 1
                },
                {
                    "contains": {
                        "type": "object",
                        "properties": {
                            "entryType": {
                                "const": "credit"
                            }
                        },
                        "required": [
                            "entryType"
                        ]
                    },
                    "minContains": 1
                }
            ]
        },
        "additionalProperties": false
    },
    "required": ["id", "entryLines"],
    "$defs": {
        "entryLine": {
            "type": "object",
            "properties": {
                "accountId": {
                    "type": "integer"
                },
                "amount": {
                    "type": "number"
                },
                "entryType": {
                    "enum": [
                        "credit",
                        "debit"
                    ]
                }
            },
            "required": [
                "accountId",
                "amount",
                "entryType"
            ],
            "additionalProperties": false
        }
    }
}